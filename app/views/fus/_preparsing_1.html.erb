        </div>
        <% end %>
	
      </div>
    </div>
 
    <% end %>
    
    <% current_format = @h_json['detected_format'] %>
    <%# current_format %>
    <%# child_format %>
    <%# if (@current_dataset or @error) and (child_format == 'RAW_TEXT') %> <!--#or @h_format[current_format][:child_format] == 'RAW_TEXT' -->
    <% if (child_format == 'RAW_TEXT') %>
